<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checklistCard"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp">

        <!--<ImageView-->
        <!--android:id="@+id/checklistIcon"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="48dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--app:srcCompat="@drawable/oil_bottle" />-->

        <TextView
            android:id="@+id/checklistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Title of Part"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/checkListCheckBox" />

        <CheckBox
            android:id="@+id/checkListCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_alignBaseline="@+id/checklistDes"
            android:layout_alignBottom="@+id/checklistDes"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/checklistDes"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/checklistTitle"
            android:layout_below="@+id/checklistTitle"
            android:layout_marginRight="10dp"
            android:text="This will be a short description of the part that the user will need to get."
            android:layout_toStartOf="@+id/checkListCheckBox" />

    </RelativeLayout>


</android.support.v7.widget.CardView>