<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checklistCard"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/checklistIcon"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/oil_bottle" />

        <TextView
            android:id="@+id/checklistTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checklistIcon"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checklistIcon"
            android:text="Title of Part"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkListCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/checklistDes"
            android:checked="false" />

        <TextView
            android:id="@+id/checklistDes"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/checklistTitle"
            android:layout_below="@+id/checklistTitle"
            android:text="This will be a short description of the part that the user will need to get." />

    </RelativeLayout>


</android.support.v7.widget.CardView>