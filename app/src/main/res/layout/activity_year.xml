<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mikeporet.autoremind.YearActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="What year is your car?"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-100dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/numberPickerMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />

        <NumberPicker
            android:id="@+id/numberPickerDY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/numberPickerMC"
            android:layout_alignBottom="@+id/numberPickerMC"
            android:layout_toEndOf="@+id/numberPickerMC"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/carSelectFinishButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:background="@color/colorAccent"
        android:onClick="finishClick"
        android:paddingHorizontal="10dp"
        android:paddingVertical="100dp"
        android:text="Next"
        android:textColor="@color/colorAccentText" />

</RelativeLayout>
